@model IEnumerable<PredictionHistory>
@{
}

<h2>Istoric predicții</h2>
<form method="get" asp-action="History" class="row g-3 mb-3">
    <div class="col-md-3">
        <label class="form-label">Tip plată</label>
        <select name="paymentType" class="form-select">
            <option value="">Toate</option>
            <option value="CRD" selected="@(ViewBag.CurrentPaymentType =="CRD")">Card</option>
            <option value="CSH" selected="@(ViewBag.CurrentPaymentType =="CSH")">Cash</option>
 <          <option value="OTHER" selected="@(ViewBag.CurrentPaymentType =="OTHER")">Altele</option>
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Preț minim</label>
        <input type="number" step="0.01" name="minPrice"
               value="@(ViewBag.CurrentMinPrice ?? "")"
               class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Preț maxim</label>
        <input type="number" step="0.01" name="maxPrice"
               value="@(ViewBag.CurrentMaxPrice ?? "")"
               class="form-control" />
    </div>


    <div class="col-md-2">
        <label class="form-label">Data Start</label>
        <!-- ToString("yyyy-MM-dd") este obligatoriu pentru input type="date" -->
        <input type="date" name="startDate"
               value="@(ViewBag.CurrentStartDate?.ToString("yyyy-MM-dd"))"
               class="form-control" />
    </div>

    <div class="col-md-2">
        <label class="form-label">Data Final</label>
        <input type="date" name="endDate"
               value="@(ViewBag.CurrentEndDate?.ToString("yyyy-MM-dd"))"
               class="form-control" />
    </div>

    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary">Filtrează</button>
    </div>

</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Data
                <a asp-action="History"
                   asp-route-sortOrder="date_asc"
                   asp-route-paymentType="@ViewBag.CurrentPaymentType"
                   asp-route-minPrice="@ViewBag.CurrentMinPrice"
                   asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                   asp-route-startDate="@(ViewBag.CurrentStartDate?.ToString("yyyy-MM-dd"))"
                   asp-route-endDate="@(ViewBag.CurrentEndDate?.ToString("yyyy-MM-dd"))">
                    ↑
                </a>
                <a asp-action="History"
                   asp-route-sortOrder="date_desc"
                   asp-route-paymentType="@ViewBag.CurrentPaymentType"
                   asp-route-minPrice="@ViewBag.CurrentMinPrice"
                   asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                   asp-route-startDate="@(ViewBag.CurrentStartDate?.ToString("yyyy-MM-dd"))"
                   asp-route-endDate="@(ViewBag.CurrentEndDate?.ToString("yyyy-MM-dd"))">
                    ↓
                </a>
            </th>
            <th>Pasageri</th>
            <th>Distanță</th>
            <th>Timp (sec)</th>
            <th>Tip plată</th>
            <th>
                Preț prezis
                <a asp-action="History"
                   asp-route-sortOrder="price_asc"
                   asp-route-paymentType="@ViewBag.CurrentPaymentType"
                   asp-route-minPrice="@ViewBag.CurrentMinPrice"
                   asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                   asp-route-startDate="@(ViewBag.CurrentStartDate?.ToString("yyyy-MM-dd"))"
                   asp-route-endDate="@(ViewBag.CurrentEndDate?.ToString("yyyy-MM-dd"))">
                    ↑
                </a>
                <a asp-action="History"
                   asp-route-sortOrder="price_desc"
                   asp-route-paymentType="@ViewBag.CurrentPaymentType"
                   asp-route-minPrice="@ViewBag.CurrentMinPrice"
                   asp-route-maxPrice="@ViewBag.CurrentMaxPrice"
                   asp-route-startDate="@(ViewBag.CurrentStartDate?.ToString("yyyy-MM-dd"))"
                   asp-route-endDate="@(ViewBag.CurrentEndDate?.ToString("yyyy-MM-dd"))">
                    ↓
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CreatedAt</td>
                <td>@item.PassengerCount</td>
                <td>@item.TripDistance</td>
                <td>@item.TripTimeInSecs</td>
                <td>@item.PaymentType</td>
                <td>@item.PredictedPrice</td>
            </tr>
        }
    </tbody>
</table>
