@model DashboardViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard predicții";
}

<h2>Dashboard predicții</h2>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-filter"></i> Filtrare după Interval de Dată
    </div>
    <div class="card-body">
        <form asp-controller="Prediction" asp-action="Dashboard" method="get">
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="fromDate">De la data</label>
                        <input type="date" class="form-control" name="fromDate"
                               value="@(Model.FromDate.HasValue? Model.FromDate.Value.ToString("yyyy-MM-dd") : "")">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="toDate">Până la data</label>
                        <input type="date" class="form-control" name="toDate"
                               value="@(Model.ToDate.HasValue? Model.ToDate.Value.ToString("yyyy-MM-dd") : "")">
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-block">Filtrează</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                Număr total de predicții
                <div class="text-white-50 small">Filtrate:</div>
                <div class="text-white h5">@Model.TotalPredictions</div>
            </div>
        </div>
    </div>
    <div class="col-lg-8 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Preț mediu per tip de plată</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tip plată</th>
                            <th>Număr predicții</th>
                            <th>Preț mediu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PaymentTypeStats)
                        {
                            <tr>
                                <td>@item.PaymentType</td>
                                <td>@item.Count</td>
                                <td>@item.AveragePrice.ToString("0.00")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-xl-6 col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Distribuția prețurilor prezise</h6>
            </div>
            <div class="card-body">
                <canvas id="priceChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ... (Aici continuă codul Chart.js) ...

            // 1. Pregătirea datelor pentru grafic
            var priceBucketsData = @Html.Raw(JsonSerializer.Serialize(Model.PriceBuckets));
            var labels = priceBucketsData.map(item => item.Label);
            var counts = priceBucketsData.map(item => item.Count);

            // 2. Crearea graficului
            var ctx = document.getElementById('priceChart').getContext('2d');
            var priceChart = new Chart(ctx, {
                type: 'bar', // Sau 'pie', 'doughnut'
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Număr Predicții',
                        data: counts,
                        backgroundColor: 'rgba(78, 115, 223, 0.5)',
                        borderColor: 'rgba(78, 115, 223, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}